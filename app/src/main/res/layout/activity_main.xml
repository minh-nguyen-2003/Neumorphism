<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0C987">

    <vn.minh_nguyen.vkey.library.neumorphic.NeumorphismTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hellofds"
        android:textSize="50sp"
        app:isConcave="false"
        app:mainColor="#F0C987"
        android:layout_marginTop="100dp"
        app:elevationFactor="1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lightDirection="bottomRight" />

    <vn.minh_nguyen.vkey.library.neumorphic.NeumorphismLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:cornerRadius="10dp"
        app:isConcave="true"
        app:elevationFactor="0.5"
        app:mainColor="#F0C987"
        app:lightDirection="bottomRight"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fgdg"/>
    </vn.minh_nguyen.vkey.library.neumorphic.NeumorphismLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
